<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config />
    <context:component-scan base-package="eu.ddmore.metadata"/>

    <bean id="metadataMap" class="eu.ddmore.metadata.service.MetadataMap"/>

   <bean id="metadataReader" class="eu.ddmore.metadata.service.MetadataReaderImpl">
       <constructor-arg name="model" ref="model"/>
       <constructor-arg name="metadataMap" ref="metadataMap"/>
   </bean>

    <bean id="metadataValidator" class="eu.ddmore.metadata.service.MetadataValidatorImpl">
    </bean>

    <bean id="model" class="com.hp.hpl.jena.rdf.model.ModelFactory" factory-method="createDefaultModel" />

</beans>